# EasyTax-AU Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Database Configuration
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=easytax-au

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
PORT=3000

# =============================================================================
# Security Configuration
# =============================================================================
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your_64_character_hex_key_here_generate_with_openssl_rand_hex_32

# =============================================================================
# Deployment Configuration
# =============================================================================
# Set to true when running in Docker, false for bare-metal/LXC
IS_DOCKER=false

# =============================================================================
# Frontend Configuration (Docker Deployment)
# =============================================================================
# Port for web frontend (default: 80)
WEB_PORT=80

# Traefik Configuration (optional - for HTTPS)
TRAEFIK_ENABLED=false
TRAEFIK_HOST=easytax.bobeliadesign.com

# Development only (not used in Docker)
# VITE_API_URL=http://localhost:3000
